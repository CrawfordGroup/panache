
srcdir = @srcdir@
VPATH = @srcdir@

FC_SYMBOL = @FC_SYMBOL@

include ../MakeVars

PSITARGET = $(top_objdir)/lib/libPSI_panache.a

CXXDEF += -Drestrict=__restrict -DFC_SYMBOL=$(FC_SYMBOL)

TRUECXXSRC = $(notdir $(wildcard $(srcdir)/*.cc))
DEPENDINCLUDE = $(notdir $(wildcard $(srcdir)/*.h))

LIBOBJ = $(TRUECXXSRC:%.cc=%.o)

include ../MakeRules

install_inc:: $(DEPENDINCLUDE)
	$(MKDIRS) $(DESTDIR)$(incdir)/libpanache
	$(INSTALL_INCLUDE) $^ $(DESTDIR)$(incdir)/libpanache

ifneq "$(MAKECMDGOALS)" "clean"
include $(LIBOBJ:%.o=%.d)
endif

